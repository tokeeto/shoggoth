                text: 'Asset'
                id: template
            Button:
                text: 'Select Template'
                on_release: ui.TemplateSelector(callback=root.set_template).open()
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '28dp'
            Label:
                text: 'Set'
            Label:
                text: 'Player card'
